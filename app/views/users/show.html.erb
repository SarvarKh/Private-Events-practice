<article>
    <ul>
        <li> <strong>Name:</strong> <%= @user.name %> </li>
        <li> <strong>Email:</strong> <%= @user.email %> </li>
    </ul>
    <p><%= link_to "Edit", edit_user_path(@user) %></p>
    <p><%= link_to 'Destroy', user_path(@user),
                    method: :delete,
                    data: {confirm: "Are you sure?" } %></p>
</article>