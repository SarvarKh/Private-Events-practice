<article class="p-3 d-flex justify-content-center">
    <div>
        <% @users.each do |user| %>
            <div class="border border-secondary rounded p-4 mb-3">
                <p> <strong>Name:</strong> <%= link_to user.name, user %> </p>
                <p> <strong>Email:</strong> <%= user.email %> </p>
            </div>
        <% end %>
    </div>
</article>